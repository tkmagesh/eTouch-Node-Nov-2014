html
    head
        title Task Manager
        link(rel="stylesheet", href="/stylesheets/style.css")
        script(src="/javascripts/jquery.js")
        script(src="/javascripts/tasks-script.js")
    body
        h1 Tasks Manager
        hr
        ol#olTaskList
            each task in tasks
                li(taskId=task.id)
                    if task.isCompleted
                        span.completed= task.name
                    else
                        span= task.name